{
  "name": "XQ",
  "version": "0.0.1",
  "description": "Here's a cleaned up and enhanced version of your dynamic environment file creator. It connects to MongoDB, fetches config values from the app_setting collection, and writes them to an environment file (development.env or production.env depending on NODE_ENV).",
  "author": "Himanshu Rajput",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "export NODE_ENV=development && node setup/createEnvironment.js && node setup/initEnvironment.js && nest start",
    "start:dev": "export NODE_ENV=development && node setup/createEnvironment.js && node setup/initEnvironment.js && nest start --watch",
    "start:debug": "export NODE_ENV=development && node setup/createEnvironment.js && node setup/initEnvironment.js && nest start --debug --watch",
    "start:prod": "export NODE_ENV=production && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "export NODE_ENV=development && node setup/createEnvironment.js && node setup/initEnvironment.js && webpack --config webpack.config.js --watch",
    "build-prod": "export NODE_ENV=production && node setup/createEnvironment.js && node setup/initEnvironment.js && webpack --config webpack.config.js --watch",
    "nest-build": "export NODE_ENV=production && node setup/createEnvironment.js && node setup/initEnvironment.js && nest build",
    "start:server": "export NODE_ENV=production && node dist/server.js"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "copy-webpack-plugin": "^13.0.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.13.1",
    "nest-winston": "^1.10.2",
    "nodemailer": "^6.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^18.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@hapi/joi": "^17.1.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "run-script-webpack-plugin": "^0.2.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
